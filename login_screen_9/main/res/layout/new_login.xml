<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bcd2"
    tools:context="com.example.balarajum.splash.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="23dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name_com"
        />


    <LinearLayout
        android:id="@+id/login_frame"
        android:background="@drawable/login_frame"
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/comp_txt"
        android:layout_toEndOf="@+id/name_com"
        android:layout_marginStart="18dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/username"
            android:gravity="start"
            android:layout_marginLeft="15dp"
            android:textColorHint="#bbc"
            android:backgroundTint="@android:color/transparent"
            android:inputType="textWebEmailAddress"
            android:id="@+id/textView" />
        <View xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="300dp"
            android:layout_height="0.7dp"
            android:padding="15dp"

            android:background="#bbc" />
        <EditText
            android:gravity="start"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColorHint="#bbc"
            android:layout_marginLeft="15dp"
            android:backgroundTint="@android:color/transparent"
            android:inputType="textWebPassword"
            android:hint="@string/password"
            android:id="@+id/textView2" />

    </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


        <Button
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:id="@+id/login_btn"
            android:textColor="#FFF"
            android:background="@drawable/login_btn"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="25dp"
            android:layout_above="@+id/singup"
            android:layout_alignStart="@+id/login_frame" />

        <Button
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="@string/sign"
            android:id="@+id/sign_btn"
            android:textColor="#FFF"
            android:background="@drawable/signup"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="17dp"
            android:layout_above="@+id/singup"
            android:layout_alignStart="@+id/login_frame" />
        </LinearLayout>
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/singup"
        android:text="@string/no_act"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="23dp"
        android:layout_above="@+id/button"
        android:layout_alignStart="@+id/button2" />

    </LinearLayout>
</RelativeLayout>
