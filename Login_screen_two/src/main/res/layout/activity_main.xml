<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/g_btn"
    tools:context="com.example.balarajum.login_one.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gratify"
        android:textColor="@android:color/white"
        android:textSize="40dp"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="50dp"
        android:id="@+id/text1"
        />

    <LinearLayout
        android:id="@+id/liner1"
        android:orientation="vertical"
        android:layout_below="@id/text1"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#20000000"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/usr"
                android:id="@+id/user"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:padding="5dp"
                />
            <EditText
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:hint="Username"
                android:scrollbars="none"
                android:backgroundTint="@android:color/transparent"
                android:textColorHint="#20000000"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#20000000"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pwd"
                android:padding="5dp"
                android:layout_gravity="center"
                android:id="@+id/paswd"
                android:textSize="20dp"
                />
            <EditText
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:hint="Password"
                android:backgroundTint="@android:color/transparent"
                android:scrollbars="none"
                android:textColorHint="#20000000"
                android:layout_gravity="center_horizontal"
                />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_below="@id/liner1"
        android:id="@+id/butn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#20000000"
        android:text="Sign in"
        android:textColor="@android:color/white"
        android:layout_marginTop="25dp"
        android:textSize="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ara you new user "
        android:layout_gravity="center"
        android:textSize="10dp"
        android:layout_below="@id/butn"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="120dp"
        android:textColor="@android:color/white"
        />
</RelativeLayout>
