<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.example.balarajum.splash.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name_com"
        />


    <LinearLayout
        android:id="@+id/login_frame"
        android:background="@drawable/login_frame"
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_below="@+id/comp_txt"
        android:layout_toEndOf="@+id/name_com"
        android:layout_marginStart="18dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/username"
            android:gravity="start"
            android:layout_marginLeft="15dp"
            android:textColorHint="#bbc"
            android:backgroundTint="@android:color/transparent"
            android:inputType="textWebEmailAddress"
            android:id="@+id/textView" />
        <View xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="300dp"
            android:layout_height="0.7dp"
            android:background="#20000000" />
        <EditText
            android:gravity="start"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColorHint="#bbc"
            android:layout_marginLeft="15dp"
            android:backgroundTint="@android:color/transparent"
            android:inputType="textWebPassword"
            android:hint="@string/password"
            android:id="@+id/textView2" />

    </LinearLayout>

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:id="@+id/login_btn"
        android:textColor="#48b1bf"
        android:background="@drawable/login_btn"
        android:layout_marginBottom="9dp"
        android:layout_above="@+id/singup"
        android:layout_alignStart="@+id/login_frame" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create"
        android:id="@+id/textView4"
        android:textColor="@android:color/white"
        android:layout_marginBottom="11dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/login_btn"
        android:layout_marginStart="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signup"
        android:textColor="@android:color/holo_red_dark"
        android:id="@+id/textView3"
        android:layout_marginStart="11dp"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_toEndOf="@+id/textView4" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:id="@+id/button"
        android:text="G"
        android:textSize="20sp"
        android:textColor="@android:color/holo_red_light"
        android:background="@drawable/gm_login"
        android:layout_above="@+id/textView4"
        android:layout_toEndOf="@+id/textView4" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/button2"
        android:text="F"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/fb_login"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        android:layout_alignBaseline="@+id/button"
        android:layout_alignBottom="@+id/button"
        android:layout_alignEnd="@+id/textView4" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/singup"
        android:text="@string/no_act"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="23dp"
        android:layout_above="@+id/button"
        android:layout_alignStart="@+id/button2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/icon_logo"
        android:src="@drawable/new_one_logo"
        android:layout_below="@+id/name_com"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="11dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/comp_txt"
        android:textSize="25sp"
        android:text="@string/app_name"
        android:textColor="@android:color/white"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@+id/icon_logo"
        android:layout_alignStart="@+id/singup" />

</RelativeLayout>
